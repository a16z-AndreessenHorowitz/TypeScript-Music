extends ../../layouts/default.pug 
include ../../mixins/box-head.pug

block main 
  .container.my-3 
    .row 
      .col-12   
        +box-head(pageTitle)
  
  .row
      each item in songs
        .col-6.mb-3
          .song-item
            .inner-image
              a(href=`/songs/detail/${item.slug}`)
                img(src=item.avatar)
            .inner-content
              .inner-title
                a(href=`/songs/detail/${item.slug}`) #{item.title}
              .inner-singer
                i.fa-solid.fa-microphone-lines
                |  #{item.fullName}
              .inner-like
                i.fa-solid.fa-thumbs-up
                |  #{item.like}
